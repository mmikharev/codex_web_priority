{
  "name": "codex_web_priority",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "dev:server": "node server/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "electron:rebuild": "electron-rebuild --force --only better-sqlite3",
    "electron:dev": "npm run electron:rebuild && concurrently \"npm:dev\" \"npm run electron:start\"",
    "electron:build": "npm run build && npm run electron:rebuild && electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "jsdom": "^24.1.0",
    "typescript": "^5.4.5",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.codexwebpriority",
    "productName": "Codex Web Priority",
    "files": [
      "dist/**",
      "electron/**",
      "server/**",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ]
  }
}
